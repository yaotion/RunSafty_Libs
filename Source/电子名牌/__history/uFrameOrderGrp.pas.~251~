  TMView : TTrainmanView;
begin
  with m_Frame.m_ScrollView do
  begin
    if PopupView is TTrainmanView then
    begin
      TMView := (PopupView as TTrainmanView);
      if (TMView.Trainman.strTrainmanNumber <> '') then
      begin
        t
      end;
    end;
  end;
end;

